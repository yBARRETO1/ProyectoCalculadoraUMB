<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtOperacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:enabled="false"
        android:focusableInTouchMode="false"
        android:fontFamily="casual"
        android:gravity="center|right"
        android:inputType="number"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtVistaPreliminar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOperacion" />

    <Button
        android:id="@+id/btnNum5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum4"
        app:layout_constraintTop_toTopOf="@+id/btnNum4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum8"
        app:layout_constraintTop_toTopOf="@+id/btnNum8"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnBorrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_signo_borrar"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnMultiplica"
        app:layout_constraintTop_toTopOf="@+id/btnMultiplica"
        app:layout_constraintWidth_percent="0.25"
        tools:layout_editor_absoluteY="293dp" />

    <Button
        android:id="@+id/btnDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnC"
        app:layout_constraintTop_toTopOf="@+id/btnC"
        app:layout_constraintWidth_percent="0.25"
        android:text="@string/label_signo_div" />

    <Button
        android:id="@+id/btnC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="c"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVistaPreliminar"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnMultiplica"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="x"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnDivision"
        app:layout_constraintTop_toTopOf="@+id/btnDivision"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnC"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum7"
        app:layout_constraintTop_toTopOf="@+id/btnNum7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNumMenos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum9"
        app:layout_constraintTop_toTopOf="@+id/btnNum9"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNumMas"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum6"
        app:layout_constraintTop_toTopOf="@+id/btnNum6"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum5"
        app:layout_constraintTop_toTopOf="@+id/btnNum5"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum1"
        app:layout_constraintTop_toTopOf="@+id/btnNum1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum2"
        app:layout_constraintTop_toTopOf="@+id/btnNum2"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNumIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="="
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@+id/btnNum3"
        app:layout_constraintTop_toTopOf="@+id/btnNum3"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btnNum0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNum1"
        app:layout_constraintWidth_percent="0.50" />

    <Button
        android:id="@+id/btnNumPunto"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="."
        android:textSize="30sp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toEndOf="@+id/btnNum0"
        app:layout_constraintTop_toTopOf="@+id/btnNum0"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>